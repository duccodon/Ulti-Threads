<script>
  document.getElementById('follower-button').addEventListener('click', function (event) {
    event.preventDefault(); // Prevent the default link behavior
    var popup = document.getElementById('follower-popup');
    var overlay = document.getElementById('overlay');
    popup.classList.toggle('hidden');
    overlay.classList.toggle('hidden');
  });

  document.getElementById('overlay').addEventListener('click', function() {
    var popup = document.getElementById('follower-popup');
    var overlay = document.getElementById('overlay');
    
    // Hide the popup and overlay
    popup.classList.add('hidden');
    overlay.classList.add('hidden');
  });

  document.getElementById('close-follower').addEventListener('click', function() {
    var close = document.getElementById('follower-popup');
    close.classList.add('hidden');
    overlay.classList.add('hidden');
  })

</script>