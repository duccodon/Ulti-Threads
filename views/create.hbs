<div class="login-container w-[10rem] sm:w-[25rem] mx-auto mt-[40px] md:mt-[-100px] bg-white p-[20px] rounded-[8px] w-[400px] flex justify-center flex-col">
    <h2 class="text-center pb-4 text-xl font-semibold">Create a new account</h2>
    <form action="" method="POST">
        <input type="email" id="email" name="email" placeholder="Email"
            class="w-full p-5 mb-5 rounded-xl border border-gray-300 bg-[#FAFAFA] box-border" required>
        <input type="number" id="phonenumber" name="phonenumber" placeholder="Phone number"
            class="w-full p-5 mb-5 rounded-xl border border-gray-300 bg-[#FAFAFA] box-border" required>
        <input type="text" id="username" name="username" placeholder="Username"
            class="w-full p-5 mb-5 rounded-xl border border-gray-300 bg-[#FAFAFA] box-border" required>
        <input type="password" id="password" name="password" placeholder="Password"
            class="w-full p-5 mb-5 rounded-xl border border-gray-300 bg-[#FAFAFA] box-border" required>
        <p id="passwordMessage" class="text-sm text-red-500 hidden"></p>
        
        <div class="flex justify-center">
            <input type="submit" value="Submit"
                class="mt-4 flex justify-center px-8 py-2 font-medium rounded-xl cursor-pointer transition-all ease-in-out duration-300 text-sm bg-black text-white hover:opacity-80">
        </div>
    </form>

    <div class="line-with-word relative text-center text-sm text-gray-400 my-4">Already have an account?</div>
    {{> button link="./Login" styling="flex justify-center bg-white text-black border border-gray-300 py-2 px-8 rounded-xl font-medium
    text-sm hover:opacity-80" text="Login"}}
</div>

<script>
    document.getElementById('password').addEventListener('input', function () {
        const password = this.value;
        const messageElement = document.getElementById('passwordMessage');

        //check for both letters and numbers
        const hasLetters = /[a-zA-Z]/.test(password);
        const hasNumbers = /\d/.test(password);

        if (hasLetters && hasNumbers) {
            // qualified
            messageElement.classList.add('hidden');
        } else {
            // not qualified
            messageElement.textContent = "Password must contain both numbers and letters.";
            messageElement.classList.remove('hidden');
        }
    });
</script>