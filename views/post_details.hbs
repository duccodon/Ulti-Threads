                                    <h3 class="text-[#ccc]">{{timeAgo thread.createdAt}}</h3>
                                </div>

                                <div class="content">
                                    {{thread.content}}
                                </div>

                                {{#each thread.Media}}
                                <div class="photo">
                                    <img src="{{mediaUrl}}" class="w-full max-w-[100%] h-auto object-cover" />
                                </div>
                                {{/each}}
                            </div>
                        </div>
                            <span class="edit">
                                <i class="fa-solid fa-ellipsis"></i>
                            </span>
                        </div>

                        <div class="mb-[1rem] pt-[1rem] px-[3.7rem] flex gap-[1.5rem] justify-between">
                            <span class="actionbutton like-button relative">
                            <i class="fa-regular fa-heart"></i>
                            </span>
                            <span class="actionbutton comment-button relative" data-post-id ="{{thread.id}}">
                            <i class="fa-regular fa-comment"></i>
                            </span>
                            <span class="actionbutton share-button relative">
                            <i class="fa-solid fa-share"></i>
                            </span>
                        </div>
                </div>
