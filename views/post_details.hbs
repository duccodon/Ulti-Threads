                    {{#each thread.Comments}}
                    <div class="comment pt-4 flex justify-between gap-4 text-black border-b border-gray-300">
                        <img src="{{this.User.profile_picture}}"
                            class="min-w-[2.5rem] min-h-[2.5rem] max-w-[2.5rem] max-h-[2.5rem] rounded-full overflow-hidden" />
                        <div class="comment-container flex-1">
                            <div class="comment-content">
                                <div class="comment-header inline-flex gap-2 text-sm">
                                    <h3>{{this.User.username}}</h3>
                                    <h3 class="text-gray-400">{{timeAgo this.createdAt}}</h3>
                                </div>
                                <div class="comment-text">
                                    {{this.content}}
                                </div>
                            </div>
                            <div class="comment-buttons m-[.5rem] py-[0.1rem] ">
                                <span class="actionbutton like-button relative">
                                <i class="fa-regular fa-heart"></i>
                                </span>
                            </div>  
                        </div>
                    </div>
                    {{/each}}
                </div>
        </div>
 